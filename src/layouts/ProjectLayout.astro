---
const { title } = Astro.props;
import "../styles/global.css";
import Navbar from "../components/general/Navbar.astro";
import Footer from "../components/general/Footer.astro";
---

<!doctype html>
<html lang="en" data-theme="dark">
    <head>
        <link
            href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap"
            rel="stylesheet"
        />
        <link rel="icon" type="image/x-icon" href="../../public/favicon.svg" />
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title}</title>
    </head>

    <body
        class="antialiased bg-white dark:bg-slate-900 text-neutral-900 dark:text-neutral-100 min-h-screen"
    >
        <Navbar
            mainLink="/#projects"
            links={[
                { label: "home", href: "/" },
                { label: "projects", href: "/#projects" },
            ]}
        />

        <main class="mx-auto max-w-5xl px-6 py-20">
            <slot />
        </main>
    </body>

    <Footer />
</html>
