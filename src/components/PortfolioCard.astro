---
const { project } = Astro.props;
---

<article
    class="min-w-[280px] max-w-[280px] rounded-lg shadow-sm overflow-hidden hover:shadow-lg transition-transform transform hover:scale-105"
>
    {
        project.data.thumbnail && (
            <img
                src={project.data.thumbnail}
                alt={project.data.title}
                class="w-full h-48 object-cover"
            />
        )
    }

    <div class="p-4">
        <h3 class="text-xl font-semibold">{project.data.title}</h3>
        <p class="mt-1 text-sm text-neutral-400">
            {project.data.date.toLocaleDateString()}
        </p>

        {
            project.data.tags?.length > 0 && (
                <div class="mt-2 flex flex-wrap gap-2">
                    {project.data.tags.map((tag) => (
                        <span class="bg-neutral-800 text-neutral-300 text-xs px-2 py-1 rounded">
                            {tag}
                        </span>
                    ))}
                </div>
            )
        }
    </div>
</article>
